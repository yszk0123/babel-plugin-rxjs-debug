{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./lib",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "global.d.ts"]
}
